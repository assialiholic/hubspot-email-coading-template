//- mixin
mixin spacer(object)
  // spacer
  -
    if (!object) object = {};
    if (!object.width) object.width = false;
    if (!object.height) object.height = false;
  if (object.width && object.height)
    table(width="#{object.width}" height="#{object.height}" align="center" valign="top" border="0" cellpadding="0" cellspacing="0")
      tr
        td(width="#{object.width}" height="#{object.height}" style="font-size: 0px; line-height: 0px;") &nbsp;